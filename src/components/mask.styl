@component mask
  display flex
  position absolute
  justify-content center
  align-items center
  transition opacity 0.3s linear
  opacity 1
  z-index 99
  left 0
  right 0
  top 0
  bottom 0

  @m father
    position relative !important

  @m hide
    opacity 0
    display none

  @when full
    position fixed
    z-index 99999

  @when black
    background-color rgba(0, 0, 0, 1)
    box-shadow 0 0 6px rgba(0, 0, 0, 0.65)
    opacity 0.75
    border-radius 2px
